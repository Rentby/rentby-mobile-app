<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/rv_booked_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/orderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Order Time"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/orderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Order Status"
            android:textSize="14sp"
            android:textColor="@android:color/holo_green_light" />

        <ImageView
            android:id="@+id/orderImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@id/orderTime"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/product" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderTime"
            android:layout_toEndOf="@id/orderImage"
            android:layout_alignParentEnd="true"
            android:orientation="vertical"
            android:layout_marginTop="13dp">

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rentDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rent Duration"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />
            <TextView
                android:id="@+id/rentTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_below="@id/orderImage"
                android:layout_marginTop="15dp"
                android:padding="7dp"
                android:text="Total Price"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_background"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
